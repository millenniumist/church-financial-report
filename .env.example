DATABASE_URL="postgresql://user:password@hostname:5432/database?schema=public"

# Optional: Secondary database for automatic failover (hot-swap)
# When configured, the app will automatically switch to this database if the primary fails
# Supports any PostgreSQL-compatible database (local, cloud-hosted like Neon/Supabase/RDS)
# DATABASE_URL_SECONDARY="postgresql://user:password@backup-hostname:5432/database?schema=public"

# Database Hot-Swap Configuration (optional, only used when DATABASE_URL_SECONDARY is set)
# DB_HEALTH_CHECK_INTERVAL=30000         # Health check interval in ms (default: 30000 = 30 seconds)
# DB_CONNECTION_TIMEOUT=5000             # Connection timeout in ms (default: 5000 = 5 seconds)
# DB_FAILURE_THRESHOLD=3                 # Failures before failover (default: 3)
# DB_PRIMARY_RETRY_INTERVAL=120000       # Retry primary when on secondary in ms (default: 120000 = 2 minutes)

GOOGLE_SHEETS_SPREADSHEET_ID="your-google-sheets-id"
# Provide either the JSON string or a filesystem path to the service account credentials.
# GOOGLE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"..."}'
GOOGLE_SERVICE_ACCOUNT_PATH="./privatekey-gsheet.json"
# Optional: protect sync API endpoint with an API key (recommended for production)
# SYNC_API_KEY="set-a-strong-secret-value"

# Bulletins Storage - Path inside Docker container (mounted as volume)
BULLETINS_STORAGE_PATH="/app/bulletins"

# Cloudinary (for backup storage)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
