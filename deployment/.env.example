# ==========================================
# CC Financial Deployment Configuration
# ==========================================
# Copy this file to .env and fill in your values

# Cloudflare Configuration
# Get these from your Cloudflare dashboard
ZoneId = your-zone-id-here
AccountId = your-account-id-here

# Remote Host SSH Configuration
# Raspberry Pi connection details
hostIp = "192.168.1.100"
username = "pi"
password = "your-password"

# Optional: SSH domain via Cloudflare Tunnel (for external access)
# SSH_DOMAIN="ssh.your-domain.com"

# PostgreSQL Database Configuration
# These values are used to set up PostgreSQL during deployment
# The deploy script will automatically install PostgreSQL and create the database
DB_NAME = cc_financial
DB_USER = ccfinapp
DB_PASSWORD = change-this-password
DB_HOST = host.docker.internal
DB_PORT = 5432

# Health Monitor Configuration
# Set to false to disable health monitoring
ENABLE_HEALTH_MONITOR = true
APP_URL = http://localhost:8358
CONTAINER_NAME = nextjs-app
HEALTH_ENDPOINT = /api/health

# MQTT Broker Settings (for health monitoring)
# Used by the health monitor service to publish metrics
# Local Network: mqtt://192.168.x.x:1883
# Remote Access: Enable Tailscale below for secure access from anywhere
MQTT_BROKER = mqtt://192.168.1.100:1883
MQTT_TOPIC = homeassistant/sensor/cc-church
MQTT_CLIENT_ID = cc-church-health
MQTT_USERNAME = ccchurch
MQTT_PASSWORD = change-this-password

# MQTT Mobile Dashboard Credentials
# Use these credentials in your Android MQTT Dashboard app
# When at home: Connect to mqtt://192.168.x.x:1883
# When remote: Enable Tailscale and use mqtt://100.x.x.x:1883
MQTT_MOBILE_USERNAME = mobile
MQTT_MOBILE_PASSWORD = change-this-password

# Health Check Interval (milliseconds)
# How often to check app health and publish to MQTT
# 60000 = 1 minute, 30000 = 30 seconds
CHECK_INTERVAL = 60000

# ==========================================
# Tailscale Configuration (Optional)
# ==========================================
# Enable to install and setup Tailscale for remote MQTT access
# Provides secure remote access without port forwarding
ENABLE_TAILSCALE = false

# Optional: Tailscale Pre-Auth Key
# Get from: https://login.tailscale.com/admin/settings/keys
# Leave empty for manual authentication via URL
# For automated setup:
#   1. Create auth key with: Reusable=Yes, Ephemeral=No
#   2. Set it here: TAILSCALE_AUTH_KEY=tskey-auth-xxxxxxxxxx
#   3. Next deployment will auto-authenticate!
TAILSCALE_AUTH_KEY = ""

# ==========================================
# Elasticsearch Configuration (Optional)
# ==========================================
# Enable to install Elasticsearch for centralized logging
# Pino logs from the app will be sent to Elasticsearch for analysis
ENABLE_ELASTICSEARCH = true
ELASTICSEARCH_VERSION = 8.11.0
ELASTICSEARCH_NODE = http://localhost:9200
