# ==========================================
# CC Financial Deployment Configuration
# ==========================================
# Copy this file to .env and fill in your values

# Cloudflare Configuration
# Get these from your Cloudflare dashboard
ZoneId = your-zone-id-here
AccountId = your-account-id-here

# Remote Host SSH Configuration
# Raspberry Pi connection details
hostIp = "192.168.1.100"
username = "pi"
password = "your-password"

# Optional: SSH domain via Cloudflare Tunnel (for external access)
# SSH_DOMAIN="ssh.your-domain.com"

# Health Monitor Configuration
# Set to false to disable health monitoring
ENABLE_HEALTH_MONITOR = true
APP_URL = http://localhost:8358
CONTAINER_NAME = nextjs-app
HEALTH_ENDPOINT = /api/health

# MQTT Broker Settings (for health monitoring)
# Used by the health monitor service to publish metrics
# Note: Currently accessible on local network only (mqtt://192.168.x.x:1883)
# For remote access, consider setting up MQTT over WebSockets via Cloudflare tunnel
MQTT_BROKER = mqtt://192.168.1.100:1883
MQTT_TOPIC = homeassistant/sensor/cc-church
MQTT_CLIENT_ID = cc-church-health
MQTT_USERNAME = ccchurch
MQTT_PASSWORD = change-this-password

# MQTT Mobile Dashboard Credentials
# Use these credentials in your Android MQTT Dashboard app
# When at home: Connect to mqtt://192.168.x.x:1883
# When remote: Requires VPN or MQTT-over-WebSocket setup (see docs)
MQTT_MOBILE_USERNAME = mobile
MQTT_MOBILE_PASSWORD = change-this-password

# Health Check Interval (milliseconds)
# How often to check app health and publish to MQTT
# 60000 = 1 minute, 30000 = 30 seconds
CHECK_INTERVAL = 60000
