# Core GitOps settings
REPO_URL=https://github.com/millenniumist/church-financial-report.git
BRANCH=main
DEPLOY_DIR=/srv/cc-financial
RELEASES_DIR=/srv/cc-financial/releases
SHARED_ENV=/srv/cc-financial/shared/.env
LOG_DIR=/srv/cc-financial/logs
BUILD_LOG=/srv/cc-financial/logs/build.log
KEEP_RELEASES=5
STACKS_FILE=/srv/cc-financial/shared/stacks.conf
ROLLBACK_DIR=/srv/cc-financial/rollbacks
ROLLBACK_MODE=all
COMPOSE_PROJECT_PREFIX=cc-financial
SYNC_SOURCE_DIR=/srv/cc-financial/shared
SYNC_PATHS=content/site-data.json,privatekey-gsheet.json

# Health checks (applies to stack health_url retries)
HEALTH_RETRIES=10
HEALTH_DELAY_SECONDS=3

# Webhook
WEBHOOK_SECRET=replace-with-generated-secret
WEBHOOK_PORT=9000
WEBHOOK_PATH=/webhook
DEPLOY_SCRIPT=/srv/cc-financial/bin/deploy.sh
